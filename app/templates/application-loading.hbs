<img src="assets/backdrop.png" class="backdrop" />

<div class="layout-row layout-fill layout-align-center-center">
  <div class="loading-container">
    <svg class="loading-icon md-spin" viewBox="0 0 64 64">
      <use xlink:href="assets/corona.svg#corona"></use>
    </svg>

    <h1>
      {{#if this.data.reloading}}
        Loading new dataset...
      {{else}}
        Starting up...
      {{/if}}
    </h1>

    {{#if this.data.loadingState}}
      <i>{{this.data.loadingState}}</i>
    {{/if}}
  </div>
</div>
