<div class="chart-container">
  {{#if @title}}
    <h5>
      {{#if @onTitleClicked}}
        <a {{on "click" (fn @onTitleClicked @zone)}}>{{@title}}</a>
      {{else}}
        {{@title}}
      {{/if}}
    </h5>
  {{/if}}

  {{#if this.loading}}
    <PaperProgressCircular />
  {{/if}}

  {{#if this.dataError}}
    <div class="error">
      {{t this.dataError}}
    </div>
  {{/if}}

  <canvas
    class={{if this.dataError 'error-canvas'}}
    {{did-insert this.createChart}}
    {{did-update this.updateChart @chart @zone @options}}
    {{will-destroy this.destroyChart}} />
</div>
