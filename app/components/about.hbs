<p class="preformatted">{{t 'app.about.text'}}</p>

<h3>{{t 'app.about.sources'}}</h3>

<ul>
  {{#each-in this.sources as |key link|}}
    <li><a href="{{link}}" target="_blank" rel="noopener noreferer">{{t (concat 'app.about.sourceNames.' key)}}</a></li>
  {{/each-in}}
</ul>

<h3>{{t 'app.about.devInfo.title'}}</h3>
<p>{{{t 'app.about.devInfo.repo' htmlSafe=true}}}</p>
<p>{{{t 'app.about.devInfo.logo' htmlSafe=true}}}</p>
<p><i>{{t 'app.about.built' buildDate=this.buildDate}}</i></p>
