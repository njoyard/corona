<PaperItem class={{if @disabled "md-disabled"}} as |controls|>
  {{#if (and @disabled @disabledTooltip)}}
    <PaperTooltip @position="right">
      {{@disabledTooltip}}
    </PaperTooltip>
  {{/if}}

  <small>{{yield}}</small>
  <div class="md-secondary-container">
    <controls.radio
      @groupValue={{@groupValue}}
      @value={{@value}}
      @disabled={{@disabled}}
      @secondary={{true}}
      @onChange={{@onChange}} />
  </div>
</PaperItem>
